<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="behavior" type="com.example.administrator.activity.ChatMainActivity"/>
    </data>
    <RelativeLayout
        android:id="@+id/chat_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#F3F3F3"
        android:visibility="visible" >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/listview_foucs"/>
        <ToggleButton
            android:id="@+id/qiehuan"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"
            android:layout_marginTop="15dp"
            android:background="@drawable/toggle_qiehuan"
            android:checked="false"
            android:textOff=""
            android:textOn=""
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/menu"
            android:layout_toRightOf="@+id/qiehuan"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/listview_foucs"/>
                <Button
                    android:id="@+id/chat"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="对话"/>
                <ImageView
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/listview_foucs"/>
                <Button
                    android:id="@+id/friends"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="圈子成员"/>
                <ImageView
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/listview_foucs"/>
                <Button
                    android:id="@+id/friends_loop"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:text="圈子动态"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_toRightOf="@+id/qiehuan"
            android:id="@+id/RelativeLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible">
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible" >
                <TextView
                    android:id="@+id/jinyan"
                    android:layout_width="fill_parent"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:lines="1"
                    android:gravity="center"
                    android:text="楼主禁言中"
                    android:paddingLeft="10.0dp"
                    android:paddingRight="8.0dp"
                    android:textSize="20dp"
                    android:visibility="gone">
                </TextView>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/noraml_keyborad_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <ToggleButton
                    android:id="@+id/chat_box_btn_info"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dip"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/toggle_chat"
                    android:checked="false"
                    android:textOff=""
                    android:textOn="" />
                <com.example.administrator.UIView.AudioRecorderButton
                    android:id="@+id/chat_box_btn_voice"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/chat_box_btn_info"
                    android:layout_toLeftOf="@+id/right_btn_layout"
                    android:background="@drawable/btn_recorder_normal"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="按住  说话"
                    android:textColor="#727272"
                    android:visibility="gone"/>
                <io.github.rockerhieu.emojicon.EmojiconEditText
                    android:id="@+id/chat_box_edit_keyword"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/right_btn_layout"
                    android:layout_toRightOf="@+id/chat_box_btn_info"
                    android:background="@drawable/message_edit_bg"
                    android:minHeight="38dp"
                    android:maxHeight="80dp"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10.0dp"
                    android:paddingRight="8.0dp"
                    emojicon:emojiconSize="20sp"
                    android:textSize="16sp"
                    android:visibility="visible">
                </io.github.rockerhieu.emojicon.EmojiconEditText>

                <LinearLayout
                    android:id="@+id/right_btn_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal"
                    android:visibility="visible" >
                    <ToggleButton
                        android:id="@+id/chat_box_btn_emoji"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/toggle_emoji"
                        android:checked="false"
                        android:textOff=""
                        android:textOn=""
                        android:visibility="visible" />
                    <ToggleButton
                        android:id="@+id/chat_box_btn_add"
                        android:layout_width="34dp"
                        android:layout_height="34dp"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="5dip"
                        android:background="@drawable/toggle_add"
                        android:checked="false"
                        android:textOff=""
                        android:textOn=""
                        android:visibility="visible" />
                    <Button
                        android:id="@+id/chat_box_btn_send"
                        android:layout_width="34dp"
                        android:layout_height="32dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginLeft="2dp"
                        android:layout_gravity="center_vertical"
                        android:background="@drawable/send_msg_btn"
                        android:text="发送"
                        android:onClick="@{behavior.sentTextMessage}"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_11"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</layout>