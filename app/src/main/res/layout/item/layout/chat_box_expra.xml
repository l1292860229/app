<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="behavior" type="com.example.administrator.activity.ChatMainActivity"/>
    </data>
    <LinearLayout
        android:id="@+id/chat_box_layout_expra"
        android:layout_width="fill_parent"
        android:layout_height="220dp"
        android:background="@color/white"
        android:gravity="center|left"
        android:orientation="vertical"
        android:paddingBottom="15dp"
        android:paddingTop="15dp"
        android:visibility="gone">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/chat_box_expra_btn_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/chat_box_expra"
                    android:paddingLeft="@dimen/chat_box_expra"
                    android:paddingTop="@dimen/chat_box_expra"
                    android:onClick="@{behavior.openCamera}"
                    android:background="@drawable/border_bg"
                    android:drawableTop="@mipmap/carmera" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#828282"
                    android:layout_below="@id/chat_box_expra_btn_camera"
                    android:text="相机"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/chat_box_expra"
                android:layout_weight="1">
                <Button
                    android:id="@+id/chat_box_expra_btn_picture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:onClick="@{behavior.openAlbum}"
                    android:paddingRight="@dimen/chat_box_expra"
                    android:paddingLeft="@dimen/chat_box_expra"
                    android:paddingTop="@dimen/chat_box_expra"
                    android:background="@drawable/border_bg"
                    android:drawableTop="@mipmap/gallery" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#828282"
                    android:layout_below="@id/chat_box_expra_btn_picture"
                    android:text="相册"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/chat_box_expra"
                android:layout_weight="1">
                <Button
                    android:id="@+id/chat_box_expra_btn_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/chat_box_expra"
                    android:paddingLeft="@dimen/chat_box_expra"
                    android:paddingTop="@dimen/chat_box_expra"
                    android:onClick="@{behavior.openMap}"
                    android:background="@drawable/border_bg"
                    android:drawableTop="@mipmap/location" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#828282"
                    android:layout_below="@id/chat_box_expra_btn_location"
                    android:text="定位"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/chat_box_expra"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:visibility="visible">

                <Button
                    android:id="@+id/chat_box_expra_btn_card"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/chat_box_expra"
                    android:paddingLeft="@dimen/chat_box_expra"
                    android:paddingTop="@dimen/chat_box_expra"
                    android:onClick="@{behavior.openBusinessCard}"
                    android:background="@drawable/border_bg"
                    android:drawableTop="@mipmap/pink" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#828282"
                    android:layout_below="@id/chat_box_expra_btn_card"
                    android:text="名片"/>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:orientation="horizontal" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_weight="1">
                <Button
                    android:id="@+id/chat_box_expra_btn_favorite"
                    android:layout_width="70dp"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/chat_box_expra"
                    android:paddingLeft="@dimen/chat_box_expra"
                    android:paddingTop="@dimen/chat_box_expra"
                    android:onClick="@{behavior.openCollection}"
                    android:background="@drawable/border_bg"
                    android:drawableTop="@mipmap/file" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="#828282"
                    android:layout_below="@id/chat_box_expra_btn_favorite"
                    android:text="收藏"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/redpacket_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/chat_box_expra"
                android:layout_weight="1"
                android:visibility="gone">
                <Button
                    android:id="@+id/chat_box_expra_btn_redpacket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="@dimen/chat_box_expra"
                    android:paddingLeft="@dimen/chat_box_expra"
                    android:paddingTop="@dimen/chat_box_expra"
                    android:background="@drawable/border_bg"
                    android:drawableTop="@mipmap/rp_red_packet_records" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:paddingLeft="@dimen/chat_box_expra"
                    android:textColor="#828282"
                    android:layout_below="@id/chat_box_expra_btn_redpacket"
                    android:text="红包"/>
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>