<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="immessage" type="com.example.administrator.entity.IMMessage"/>
    </data>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="5dp" >
        <RelativeLayout
            android:id="@+id/msg"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/txt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="5dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:background="@drawable/chat_time_bg"
                android:minWidth="60dp"
                android:paddingBottom="3dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="3dp" />
            <ImageView
                android:id="@+id/img_head"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/txt_time"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@mipmap/contact_default_header" />
            <TextView
                android:id="@+id/message_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_12"
                android:layout_marginTop="5dip"
                android:layout_marginLeft="5dip"
                android:layout_marginBottom="-5dp"
                android:textColor="#6f6f6f"
                android:layout_below="@+id/txt_time"
                android:visibility="gone"
                android:text="@{immessage.from.name}"
                android:layout_toRightOf="@+id/img_head"/>
            <RelativeLayout
                android:id="@+id/msg_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/message_nickname"
                android:layout_toRightOf="@+id/img_head"
                android:background="@drawable/chatfrom_bg">
                <RelativeLayout
                    android:id="@+id/msg_voice_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/msg_voice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxHeight="50dp"
                        android:minWidth="50dp"
                        android:maxWidth="180dp"
                        android:gravity="left"
                        android:layout_centerVertical="true"
                        android:scaleType="matrix"
                        android:src="@mipmap/rvoice3" />
                    <TextView
                        android:id="@+id/msg_voice_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size"
                        android:layout_toRightOf="@+id/msg_voice"
                        android:text="1&quot; "/>
                    <ImageView
                        android:id="@+id/voice_read"
                        android:layout_toRightOf="@+id/msg_voice_time"
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:background="@drawable/voice_read_bg"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/msg_photo_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/msg_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="120dp"
                        android:maxWidth="120dp"
                        android:scaleType="fitXY" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/msg_video_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/msg_video"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_margin="1dp"
                        android:adjustViewBounds="true"
                        android:maxHeight="120dp"
                        android:maxWidth="120dp"
                        android:scaleType="fitXY" />
                    <ImageView
                        android:id="@+id/play_video"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@mipmap/play_voice"/>
                    <TextView
                        android:id="@+id/play_video_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00:00"
                        android:textSize="12dp"
                        android:background="@color/black"
                        android:textColor="@color/white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/msg_text_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/msg_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="235dp"
                        android:textColor="@color/font_color"
                        android:textSize="@dimen/text_size"
                        android:gravity="center_vertical|left"
                        android:minWidth="40dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/msg_map_layout"
                    android:layout_width="260dip"
                    android:layout_height="150dip"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/map_icon"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@mipmap/location_msg"
                        android:scaleType="fitXY"/>
                    <TextView
                        android:id="@+id/msg_map"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:background="@drawable/loaction_bottom"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_size_14" />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/msg_url_layout"
                    android:layout_width="200dip"
                    android:layout_height="70dp"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/image_url"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="10dp"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/ic_launcher"/>
                    <TextView
                        android:id="@+id/url_text"
                        android:layout_toRightOf="@+id/image_url"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLines="2"
                        android:text="链接分享"
                        android:layout_marginLeft="10dp"
                        android:layout_centerInParent="true"
                        android:textSize="12dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/msg_invite_layout"
                    android:layout_width="200dip"
                    android:layout_height="70dp"
                    android:visibility="gone">
                    <TextView
                        android:id="@+id/invite_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:maxLines="2"
                        android:text="邀请你加入行业圈"
                        android:layout_marginLeft="10dp"
                        android:textSize="16dp"/>
                    <TextView
                        android:id="@+id/invite_content"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:maxLines="3"
                        android:text="链接分享"
                        android:layout_marginLeft="10dp"
                        android:textSize="10dp"/>
                    <ImageView
                        android:id="@+id/invite_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentRight="true"
                        android:src="@mipmap/ic_launcher"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/msg_redpacket_layout"
                    android:layout_width="200dip"
                    android:layout_height="70dp"
                    android:background="@mipmap/redpacketbg"
                    android:visibility="gone">
                    <ImageView
                        android:id="@+id/money_icon"
                        android:layout_width="25dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:src="@mipmap/sharecard"/>
                    <TextView
                        android:id="@+id/money_greeting"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/money_icon"
                        android:layout_marginTop="12dp"
                        android:textColor="#ffffff"
                        android:textSize="15sp"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:text="恭喜发财，大吉大利！"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@id/money_icon"
                        android:layout_below="@id/money_greeting"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/money_icon"
                        android:textColor="#ffffff"
                        android:textSize="@dimen/text_size_12"
                        android:text="查看红包"/>
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/card_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:minHeight="50dp"
                    android:orientation="vertical"
                    android:visibility="gone" >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/devider_line"
                        android:minWidth="200dp"
                        android:padding="5dip"
                        android:text="名片"
                        android:textColor="@color/black" />
                    <RelativeLayout
                        android:id="@+id/basic_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:orientation="horizontal" >
                        <ImageView
                            android:id="@+id/card_header"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:scaleType="fitXY"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/contact_default_header" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dip"
                            android:layout_marginRight="10dip"
                            android:layout_toRightOf="@+id/card_header"
                            android:orientation="vertical" >
                            <TextView
                                android:id="@+id/card_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:maxWidth="150dp"
                                android:minWidth="100dp"
                                android:text="dddddddd"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_size" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <ProgressBar
                android:id="@+id/chat_talk_msg_progressBar"
                android:layout_width="43.399994dip"
                android:layout_height="43.399994dip"
                android:indeterminate="false"
                android:layout_toRightOf="@+id/msg_layout"
                android:layout_centerVertical="true"
                android:indeterminateDrawable="@drawable/progressbar"
                android:visibility="gone" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/xitong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/chat_time_bg"
            android:visibility="gone">
            <TextView
                android:id="@+id/xitongtextview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="系统消息"/>
        </RelativeLayout>
    </RelativeLayout>
</layout>