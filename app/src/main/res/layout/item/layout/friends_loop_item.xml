<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable  name="friendsLoopItem" type="com.example.administrator.entity.FriendsLoopItem" />
    </data>
    <RelativeLayout
        android:id="@+id/bodyer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dip"
        android:background="#F8F8F8">
        <ImageView
            android:id="@+id/friends_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:image="@{friendsLoopItem.headsmall}"
            android:src="@mipmap/contact_default_header" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_toRightOf="@+id/friends_icon"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:textColor="#1f2f58"
                android:text="@{friendsLoopItem.nickname}"
                android:textSize="@dimen/text_size" />
            <TextView
                android:id="@+id/content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:background="@drawable/friends_long_click_bg_color"
                android:focusable="false"
                android:textColor="@color/font_color"
                android:textSize="@dimen/text_size" />
            <TextView
                android:id="@+id/content_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dip"
                android:background="@drawable/friends_long_click_bg_color"
                android:text="全文"
                android:textColor="#005ead"
                android:textSize="@dimen/text_size"
                android:visibility="gone"/>
            <TextView
                android:id="@+id/biaoqian"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dip"
                android:background="@drawable/selector_biaoqianshape_small"
                android:textColor="@color/biaoqian_textcolor"
                android:textSize="@dimen/text_size_14"
                android:text="@{friendsLoopItem.type}"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/location_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/friends_long_click_bg_color"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{friendsLoopItem.address}"
                android:visibility="gone"
                android:textColor="#1f2f58" />
            <com.example.administrator.UIView.ImageGridView
                android:id="@+id/gridview"
                android:layout_width="260dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:numColumns="3"
                android:stretchMode="columnWidth"
                android:horizontalSpacing="4dip"
                android:verticalSpacing="4dip"
                android:padding="4dip" />
            <RelativeLayout
                android:id="@+id/function_layout"
                android:layout_width="fill_parent"
                android:layout_height="35dip"
                android:layout_marginBottom="5dip"
                android:layout_marginTop="0dip" >
                <LinearLayout
                    android:id="@+id/function_left_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal" >
                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:textColor="#a7a7a7"
                        android:textSize="@dimen/text_size_12" />
                    <Button
                        android:id="@+id/del_btn"
                        android:padding="5dip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="删除"
                        android:textColor="#ff0000"
                        android:background="@null"
                        android:visibility="gone"
                        android:focusable="false"
                        android:textSize="@dimen/text_size"/>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/jump_layout"
                    android:layout_width="155dip"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="30dip"
                    android:background="@drawable/dialog_bg"
                    android:orientation="horizontal"
                    android:visibility="gone" >
                    <LinearLayout
                        android:id="@+id/zan_btn"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="1.0"
                        android:background="@drawable/dialog_cancle_btn"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal" >
                        <ImageView
                            android:id="@+id/zan_btn_icon"
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:layout_marginRight="5dip"
                            android:scaleType="centerInside"
                            android:background="@drawable/friends_zan_btn"/>
                        <TextView
                            android:id="@+id/zan_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="赞"
                            android:textColor="@color/white"
                            android:textSize="14sp" />
                    </LinearLayout>
                    <ImageView
                        android:layout_width="1dip"
                        android:layout_height="match_parent"
                        android:background="@drawable/dialog_s_splite" />
                    <LinearLayout
                        android:id="@+id/comment_btn_layout"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.0"
                        android:background="@drawable/dialog_ok_btn"
                        android:gravity="center_horizontal|center_vertical"
                        android:orientation="horizontal" >
                        <ImageView
                            android:layout_width="15dip"
                            android:layout_height="15dip"
                            android:layout_marginRight="5dip"
                            android:background="@drawable/view_image_comment_icon_btn"
                            android:scaleType="centerInside" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="咨讯"
                            android:textColor="@color/white"
                            android:textSize="@dimen/text_size_14" />
                    </LinearLayout>
                </LinearLayout>
                <Button
                    android:id="@+id/function_btn"
                    android:layout_width="20dp"
                    android:layout_height="18dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/fiends_loop_pop_btn"
                    android:focusable="false" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/other_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dip"
                android:paddingBottom="5dip"
                android:paddingLeft="5dip"
                android:paddingRight="5dip"
                android:background="@drawable/friens_loop_comment_list_bg"
                android:visibility="gone">
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >
                    <ImageView
                        android:id="@+id/zan_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/blue_icon_zan"
                        android:visibility="gone" />
                    <LinearLayout
                        android:id="@+id/zan_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/friends_long_click_bg_color">
                    </LinearLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#80dedede"/>
                <LinearLayout
                    android:id="@+id/comment_layout"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/friends_long_click_bg_color"
                    android:visibility="visible">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</layout>