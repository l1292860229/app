<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable name="behavior" type="com.example.administrator.activity.SettingActivity"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroud_color_hui"
        android:orientation="vertical" >
        <include
            android:id="@+id/title_layout"
            layout="@layout/title_layout" />
        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:fadingEdge="none"
            android:scrollbars="none" >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/settting_new_item_height"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:clickable="true">
                    <ImageView
                        android:id="@+id/modify_icon"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/modify_pwd_icon" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:layout_toRightOf="@id/modify_icon"
                        android:text="修改密码"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size" />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:src="@mipmap/deep_gray_arrow" />
                </RelativeLayout>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/splite" />
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="vertical" >
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/splite" />
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/settting_new_item_height"
                        android:background="@drawable/fx_btn_list_item_bg"
                        android:clickable="true"
                        android:onClick="@{behavior.openPrivateSetNotice}">
                        <ImageView
                            android:id="@+id/qr_code_icon"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/new_msg_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/qr_code_icon"
                            android:text="新消息通知"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/deep_gray_arrow" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/splite" />
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/settting_new_item_height"
                        android:background="@drawable/fx_btn_list_item_bg"
                        android:clickable="true"
                        android:onClick="@{behavior.openPrivateSetPrivacy}">
                        <ImageView
                            android:id="@+id/private_set_icon"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/private_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/private_set_icon"
                            android:text="隐私"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/deep_gray_arrow" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/splite"/>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/settting_new_item_height"
                        android:background="@drawable/fx_btn_list_item_bg"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/block_icon"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/setting_block_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/block_icon"
                            android:text="黑名单"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/deep_gray_arrow" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/splite" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="@color/white"
                    android:orientation="vertical" >
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/splite" />
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/settting_new_item_height"
                        android:background="@drawable/fx_btn_list_item_bg"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/setting_upgrade_icon"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/setting_upgrade_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/setting_upgrade_icon"
                            android:text="检查更新"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/deep_gray_arrow" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/splite"/>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/settting_new_item_height"
                        android:background="@drawable/fx_btn_list_item_bg"
                        android:clickable="true"
                        android:onClick="@{behavior.openFeedBack}">
                        <ImageView
                            android:id="@+id/setting_feedback_icon"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/setting_feedback_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/setting_feedback_icon"
                            android:text="反馈意见"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/deep_gray_arrow" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/splite" />
                    <RelativeLayout
                        android:id="@+id/helplayout"
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/settting_new_item_height"
                        android:background="@drawable/fx_btn_list_item_bg"
                        android:clickable="true">
                        <ImageView
                            android:id="@+id/setting_help_icon"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/setting_help_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/setting_help_icon"
                            android:text="帮助中心"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/deep_gray_arrow" />
                    </RelativeLayout>
                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/splite"/>
                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="@dimen/settting_new_item_height"
                        android:background="@drawable/fx_btn_list_item_bg"
                        android:clickable="true"
                        android:onClick="@{behavior.openAbout}">
                        <ImageView
                            android:id="@+id/setting_about_icon"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:src="@mipmap/setting_about_icon" />
                        <TextView
                            android:id="@+id/about"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@id/setting_about_icon"
                            android:text="关于我们"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_size" />
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="10dp"
                            android:src="@mipmap/deep_gray_arrow" />
                    </RelativeLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@mipmap/splite" />
                </LinearLayout>
                <Button
                    android:layout_width="fill_parent"
                    android:layout_height="40dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dip"
                    android:layout_marginRight="15dip"
                    android:layout_marginTop="15dp"
                    android:background="@color/buttonColor"
                    android:gravity="center"
                    android:text="退出登录"
                    android:onClick="@{behavior.loginout}"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>