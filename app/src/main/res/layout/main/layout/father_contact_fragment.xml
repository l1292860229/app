<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
        <data>
                <variable  name="stu" type="String" />
        </data>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            android:orientation="vertical" >
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="6dp"
                    android:background="#e0e0e0"
                    android:visibility="visible" >
                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="5dp"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:orientation="horizontal" >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:text="新的朋友"
                                    android:textColor="#353535"
                                    android:drawableTop="@mipmap/new_friends_icon"
                                    android:textSize="@dimen/text_size" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:text="群聊"
                                    android:gravity="center"
                                    android:textColor="#353535"
                                    android:drawableTop="@mipmap/service_icon"
                                    android:textSize="@dimen/text_size" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:text="万人群"
                                    android:gravity="center"
                                    android:textColor="#353535"
                                    android:drawableTop="@mipmap/app_news_icon"
                                    android:textSize="@dimen/text_size" />
                        </RelativeLayout>
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true">
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="20dp"
                                    android:text="行业圈"
                                    android:gravity="center"
                                    android:textColor="#353535"
                                    android:drawableTop="@mipmap/chat_group_icon"
                                    android:textSize="@dimen/text_size" />
                        </RelativeLayout>
                </LinearLayout>
                <com.ab.view.sliding.AbSlidingTabView
                    android:id="@+id/mAbSlidingTabView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
        </LinearLayout>

</layout>