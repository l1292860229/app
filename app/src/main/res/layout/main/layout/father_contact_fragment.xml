<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
        <data>
                <variable  name="stu" type="String" />
        </data>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#e0e0e0"
            android:orientation="vertical" >
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#e0e0e0"
                    android:visibility="visible" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="6dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:clickable="true">
                        <ImageView
                            android:id="@+id/newfriend"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/new_friends_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/newfriend"
                            android:text="新的朋友"
                            android:textColor="#353535"
                            android:textSize="@dimen/text_size" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="12dp"
                            android:background="#dadada" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#e0e0e0"
                    android:visibility="visible" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="6dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:clickable="true">
                        <ImageView
                            android:id="@+id/session"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/service_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/session"
                            android:text="群聊"
                            android:textColor="#353535"
                            android:textSize="@dimen/text_size" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="12dp"
                            android:background="#dadada" />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#e0e0e0"
                    android:visibility="visible" >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="6dp"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/layout"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/fx_btn_list_item_bg"
                    android:clickable="true">
                        <ImageView
                            android:id="@+id/millionpeople"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/app_news_icon" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:layout_toRightOf="@id/millionpeople"
                            android:text="万人群"
                            android:textColor="#353535"
                            android:textSize="@dimen/text_size" />
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.1dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="12dp"
                            android:background="#dadada" />
                </RelativeLayout>
                <com.ab.view.sliding.AbSlidingTabView
                    android:id="@+id/mAbSlidingTabView"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" />
        </LinearLayout>

</layout>