<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="userinfo" type="com.example.administrator.entity.UserInfo"/>
        <variable name="behavior" type="com.example.administrator.activity.FriensLoopActivity"/>
    </data>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include
            android:id="@+id/title_layout"
            layout="@layout/title_layout" />
        <com.tandong.sa.view.AutoReFreshListView
            android:id="@+id/mListView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fadingEdgeLength="0dp"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/bottom_bar_normal_bg"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/live"
                    android:onClick="onTabClicked"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selected_live"
                    android:textSize="20dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/btn_container_address_list"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/qiye"
                    android:onClick="onTabClicked"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selected_qiye"
                    android:textSize="20dp" />

            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_container_shop"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_zhuye"
                    android:onClick="onTabClicked"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:background="@drawable/selected_shop"
                    android:textSize="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_container_find"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/weishan"
                    android:onClick="onTabClicked"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selected_weishan"
                    android:textSize="20dp" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/btn_container_profile"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    android:id="@+id/huodong"
                    android:onClick="onTabClicked"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:background="@drawable/selected_huodong"
                    android:textSize="20dp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</layout>