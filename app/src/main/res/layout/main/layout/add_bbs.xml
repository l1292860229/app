<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="behavior" type="com.example.administrator.activity.AddBbsAndIndustryActivity"/>
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
        <include
            android:id="@+id/title_layout"
            layout="@layout/title_layout" />
        <ImageView
            android:id="@+id/headsmall"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="@mipmap/signup_change_avatar"
            android:onClick="@{behavior.openImagePicker}"/>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_below="@+id/title_layout"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:background="@drawable/cirle_edit_bg">
                <EditText
                    android:id="@+id/bbstitle"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/transparent"
                    android:hint="标题"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color"
                    android:textSize="20dp" />
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/splite" />
                <EditText
                    android:id="@+id/bbsmoney"
                    android:layout_below="@+id/bbscontent"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/transparent"
                    android:hint="入圈费"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:inputType="number"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color"
                    android:textSize="20dp"
                    android:visibility="gone"/>
                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/splite"/>
                <EditText
                    android:id="@+id/bbscontent"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:background="@color/transparent"
                    android:gravity="left|top"
                    android:hint="内容说明"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="8dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/text_color"
                    android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</layout>