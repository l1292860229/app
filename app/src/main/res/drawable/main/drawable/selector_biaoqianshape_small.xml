<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 填充颜色 -->
    <solid android:color="#ffffffff"></solid>
    <!-- 线的宽度 -->
    <stroke android:width="1dp" android:color="#f2658d"></stroke>
    <!-- 矩形的圆角半径 -->
    <corners android:radius="200dp" />
    <!-- padding: Button 里面的文字与Button边界的间隔 -->
    <padding
        android:left="5dp"
        android:top="1dp"
        android:right="5dp"
        android:bottom="1dp"
        />
</shape>